<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fields marked as * are required fields"
        android:id="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/accent2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* How much average time do you spend on Social media apps daily?"
        android:id="@+id/tv2"
        android:layout_below="@+id/tv1"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/accent1"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/rgAvgTime"
        android:layout_below="@+id/tv2">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I don't use Social media apps"
            android:textSize="18sp"
            android:textColor="@color/accent2"
            android:id="@+id/rb1"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Less than/or around 15 minutes"
            android:textSize="18sp"
            android:textColor="@color/accent2"
            android:id="@+id/rb2"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Less than/or around 30 minutes"
            android:textSize="18sp"
            android:textColor="@color/accent2"
            android:id="@+id/rb3"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Less than/or around an hour"
            android:textSize="18sp"
            android:textColor="@color/accent2"
            android:id="@+id/rb4"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Less than/or around 3 hours"
            android:textSize="18sp"
            android:textColor="@color/accent2"
            android:id="@+id/rb5"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Less than/or around 6 hours"
            android:textSize="18sp"
            android:textColor="@color/accent2"
            android:id="@+id/rb6"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social media is my life"
            android:textSize="18sp"
            android:textColor="@color/accent2"
            android:id="@+id/rb7"/>

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgAvgTime"
        android:id="@+id/btnContinue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="   Continue   "
        android:textColor="@color/white"
        android:background="@color/accent2"/>

</RelativeLayout>