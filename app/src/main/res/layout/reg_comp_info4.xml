<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fields marked as * are required fields"
        android:id="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/accent2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Please select the Social media apps that you are currently using:"
        android:id="@+id/tv2"
        android:layout_below="@+id/tv1"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/accent1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tv2"
        android:id="@+id/sv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:padding="10dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instagram"
                android:textSize="18sp"
                android:id="@+id/cbInstagram"
                android:textColor="@color/accent2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YouTube"
                android:textSize="18sp"
                android:id="@+id/cbYouTube"
                android:textColor="@color/accent2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:textSize="18sp"
                android:id="@+id/cbFacebook"
                android:textColor="@color/accent2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Twitter"
                android:textSize="18sp"
                android:id="@+id/cbTwitter"
                android:textColor="@color/accent2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TikTok"
                android:textSize="18sp"
                android:id="@+id/cbTiktok"
                android:textColor="@color/accent2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pinterest"
                android:textSize="18sp"
                android:id="@+id/cbPinterest"
                android:textColor="@color/accent2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snapchat"
                android:textSize="18sp"
                android:id="@+id/cbSnapchat"
                android:textColor="@color/accent2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reddit"
                android:textSize="18sp"
                android:id="@+id/cbReddit"
                android:textColor="@color/accent2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Twitch"
                android:textSize="18sp"
                android:id="@+id/cbTwitch"
                android:textColor="@color/accent2" />

        </LinearLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sv"
        android:id="@+id/btnContinue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="   Continue   "
        android:textColor="@color/white"
        android:background="@color/accent2"/>

</RelativeLayout>